@{
    ViewData["Title"] = "QRCode Page";
}

<hr />
<h4>Type Your Email</h4>
<div style="color:red">@ViewBag.Error</div>

@using (Html.BeginForm("QRIndex", "Customers", FormMethod.Post))
{
    <div class="form-group">
        <label name="email" class="control-label"></label>
        <input name="email" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Search" class="btn btn-info" />
    </div>}

@if (@ViewBag.QRCode != null)
{
    <img src="@ViewBag.QRCode" style="width:200px;height:200px" />
}

<div>
    <a asp-action="Index">Back to List</a>
</div>